{
  "name": "shansocial",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"npm run server\" \"next dev\"",
    "build:app": "concurrently --kill-others \"npm run lint\" \"npm run build\"",
    "start": "concurrently --kill-others \"npm run server\" \"next start\"",
    "build": "next build",
    "lint": "next lint",
    "lint-watch": "nodemon --watch . --exec npm run lint",
    "server": "json-server-auth --watch ./lib/database/db.json -r ./lib/database/routes.json --port 3001"
  },
  "dependencies": {
    "concurrently": "^6.5.1",
    "json-server": "^0.17.0",
    "json-server-auth": "^2.1.0",
    "jwt-decode": "^3.1.2",
    "next": "12.1.0",
    "react": "^17.0.2",
    "react-dom": "17.0.2"

  },
  "devDependencies": {
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0"
  }
}
